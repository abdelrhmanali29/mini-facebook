					},
					"401": {
						"description": "Invalid token, Please log in again."
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"User": {
				"type": "object",
				"properties": {
					"username": {
						"type": "string",
						"example": "abdo"
					},
					"email": {
						"type": "string",
						"example": "abdo@example.com"
					},
					"password": {
						"type": "string",
						"example": "abdo_passowrd"
					},
					"mobileNumber": {
						"type": "string",
						"example": "+20111111111111111"
					}
				}
			},
			"Post": {
				"type": "object",
				"properties": {
					"text": {
						"type": "string",
						"example": "this is post text"
					},
					"image": {
						"type": "string"
					}
				}
			}
		},
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	},
	"servers": [
		{
			"description": "Try it Now",
			"url": "http://localhost:3000/api/v1/"
		}
	]
}
